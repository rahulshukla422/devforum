@model DiscussionForum.Models.COMMENT

@{
    ViewBag.Title = "Comment";
}

<h2>Comment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.commentDesc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Leave your comment here", @required = "required" } })
            </div>
        </div>
        <div class="form-group">
          &nbsp;  &nbsp;&nbsp;<input type="submit" value="Leave Comment" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
