@model DiscussionForum.Models.Video
    

@{
    ViewBag.Title = "Add";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.videoTitle, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter your video title here" } })
                @Html.ValidationMessageFor(model => model.videoTitle, "", new { @class = "text-danger" })<br />

                @Html.EditorFor(model => model.VideoCategory, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter the video category here" } })
                @Html.ValidationMessageFor(model => model.VideoCategory, "", new { @class = "text-danger" })<br />

                @Html.EditorFor(model => model.videoLink, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Enter your url here" } })
                @Html.ValidationMessageFor(model => model.videoLink, "", new { @class = "text-danger" })<br />
                <input type="submit" value="Add New Video" class="btn btn-default" />

            </div>
        </div>


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
